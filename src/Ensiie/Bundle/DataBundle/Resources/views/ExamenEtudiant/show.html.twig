{% extends 'EnsiieMainBundle:Prof:index.html.twig' %}

{% block body %}

<h1>Liste des examens</h1>

<table class="table table-hover table-bordered" style=";background-color:white;">    
  <thead style="background-color:#49afcd">
    <tr>
      <th >Libelle</th>
      <th >Description</th>
      <th >Date de début</th>
      <th >Date de fin</th>
      <th >Statut</th>
      <th >Déposé par</th>
      <th >Lien</th>
    </tr>
  </thead>
  <tbody> 
  {% for exam in mes_examens_promo %}	
  <tr>
    <td><p>{{ exam.libelle }}</p></td>
    <td><p>{{ exam.description }}</p></td>
    <td><p>{{ exam.dateDebut.format('Y-m-d H:i') }}</p></td>
    <td><p>{{ exam.dateFin.format('Y-m-d H:i') }}</p></td>
    <td>
      <p>
      {% if date < exam.dateDebut %}
	En création
      {% elseif date > exam.dateFin %}
	Clos
      {% else %}
	En cours
      {% endif %}
      </p>
    </td>
    <td>
      <p>
      {% if exam.file != "" %}
	{{ exam.file.user.username }}
      {% else %}
	 
      {% endif %}
      </p>
    </td>
    <td><p>
      {% if exam.file != "" %}
	<a href="{{ exam.file.getDlPath() }}" >x</a>
      {% else %}
	
      {% endif %}
      </p></td>
  </tr>
  {% endfor %}
  </tbody>
</table>


{% endblock %}